source 'https://github.com/CocoaPods/Specs.git'
source 'https://github.com/VoIPGRID/PrivatePodSpecs-iOS.git'

platform :ios, '9.0'
#use_frameworks! #!! Do not enable, causes an error about "target has transitive dependencies that include static binaries.... "

target 'VialerSIPLib_Example', :exclusive => true do
    pod "VialerSIPLib-iOS", :path => "../"

    pod 'HDLumberjackLogFormatter', :git => 'https://hd-apps@bitbucket.org/hd-apps/hdlumberjacklogformatter.git'
end

target 'VialerSIPLib_Tests', :exclusive => true do
    pod "VialerSIPLib-iOS", :path => "../"
    pod "OCMock"
end
